<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chips="http://schemas.android.com/apk/res/com.android.mms"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1.0"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:orientation="horizontal">

        <!--android:textAllCaps="true"-->

        <com.android.mms.ui.RecipientsEditor
            android:id="@+id/recipients_editor"
            android:background="@null"
            android:dropDownWidth="303dp"
            android:dropDownVerticalOffset="2dp"
            style="@style/RecipientPopupBackground"
            android:popupBackground="@drawable/recipient_autocomplete_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="35dp"
            android:layout_weight=".99"
            android:textSize="20dp"
            android:maxLines="2"
            android:padding="0dp"
            android:textAppearance="@android:style/TextAppearance.Material.Caption"
            android:hint="@string/to_hint"
            android:layout_gravity="start|center_vertical"
            android:inputType="textFilter|textMultiLine"
            android:nextFocusRight="@+id/recipients_selector"
            android:maxHeight="@dimen/recipients_editor_maxHeight"
            chips:maxChips="@integer/max_chips_parsed" />

        <ImageView
            android:id="@+id/recipients_selector"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|top"
            android:gravity="center"
            android:layout_weight=".01"
            android:layout_marginTop="8dp"
            android:padding="0dp"
            android:src="@drawable/ic_add_circle_white_24px"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:nextFocusLeft="@id/recipients_editor" />

    </LinearLayout>

</LinearLayout>
