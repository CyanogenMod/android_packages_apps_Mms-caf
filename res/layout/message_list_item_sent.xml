<com.android.mms.ui.MessageListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_list_item_send"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/top_spacer" />

    <LinearLayout android:id="@+id/mms_layout_view_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/sent_message_bubble_margin_start"
        android:gravity="end">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Sent messages don't display an avatar , but need this element in place -->
            <!-- as the MessageListItem is shared b/w sent and received messages -->
            <QuickContactBadge
                android:id="@+id/delivered_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_error"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/message_block"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/message_bubble_outgoing"
                android:layout_gravity="top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sim_message_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/message_item_text_padding_top"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="gone"/>

                <ViewStub android:id="@+id/mms_downloading_view_stub"
                    android:layout="@layout/mms_downloading_view"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView android:id="@+id/text_view"
                    android:autoLink="all"
                    android:paddingTop="@dimen/message_item_text_padding_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:linksClickable="false"
                    android:textAppearance="@android:style/TextAppearance.Material.Body1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <TextView android:id="@+id/mms_msg_size_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:visibility="gone"
                    android:textAppearance="@android:style/TextAppearance.Material.Caption" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/locked_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_lock_message_sms"
                        android:paddingEnd="4dip"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/details_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="4dip"
                        android:src="@drawable/ic_sms_mms_details"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/sim_indicator_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="4dip"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical" />

                    <TextView android:id="@+id/sim_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="16dip"
                        android:textAppearance="@android:style/TextAppearance.Material.Caption"
                        android:visibility="gone"/>

                </LinearLayout>

                <ViewStub android:id="@+id/mms_layout_view_stub"
                    android:layout="@layout/mms_layout_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/arrowhead_container"
                android:layout_width="@dimen/material_16dp_keyline"
                android:layout_height="@dimen/avatar_width_height"
                android:gravity="top|end">

                <ImageButton
                    android:id="@+id/message_bubble_arrowhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/message_bubble_sent_arrowhead"
                    android:layout_gravity="start|center_vertical"/>

            </FrameLayout>

            <com.android.contacts.common.widget.CheckableQuickContactBadge
                android:id="@+id/avatar"
                android:layout_width="@dimen/avatar_width_height"
                android:layout_height="@dimen/avatar_width_height"
                android:layout_marginStart="8dp"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/message_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/material_16dp_keyline"
            android:gravity="end|center_vertical"
            android:paddingEnd="4dip"
            android:textSize="@dimen/compose_message_normal_text_size"
            android:textColor="@color/message_list_item_status_text_color"/>

    </LinearLayout>

</com.android.mms.ui.MessageListItem>
