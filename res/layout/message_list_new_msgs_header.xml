<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_msgs_header_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <View
        android:layout_height="@dimen/new_msgs_header_divider_line_width"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@color/new_msgs_header_divider_line_color"
        android:alpha="@dimen/new_msgs_header_divider_line_alpha"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/new_msgs_header_text_margins"
        android:gravity="center">

        <TextView
            android:id="@+id/new_msgs_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/new_msgs_header_text_size"
            android:textColor="@color/new_msgs_header_text_color"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/new_msgs_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/new_msgs_header_text_size"
            android:includeFontPadding="false"
            android:textColor="@color/new_msgs_header_text_color"/>

    </LinearLayout>

    <View
        android:layout_height="@dimen/new_msgs_header_divider_line_width"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@color/new_msgs_header_divider_line_color"
        android:alpha="@dimen/new_msgs_header_divider_line_alpha"/>

</LinearLayout>

