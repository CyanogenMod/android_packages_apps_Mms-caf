<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/QuickMessageContentlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.android.mms.ui.ReceivedMessageScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/qm_received_msg_height"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="@dimen/qm_fading_edge_length"
        android:scrollbarStyle="insideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/material_16dp_keyline"
            android:paddingEnd="@dimen/material_16dp_keyline"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/qm_received_msg_bubble_start"
            android:layout_marginTop="@dimen/material_16dp_keyline"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fromTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:layout_marginEnd="5dp"
                android:textSize="16sp"
                android:textColor="@color/qm_from_text_color"
                android:textColorLink="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/timestampTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/qm_recv_timestamp_text_color" />

        </LinearLayout>

        <!-- message information section incl sender name, badge and timestamp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RelativeLayout
                android:layout_width="@dimen/qm_received_msg_bubble_start"
                android:layout_height="wrap_content">

                <android.widget.QuickContactBadge
                    android:id="@+id/contactBadge"
                    android:layout_width="@dimen/avatar_width_height"
                    android:layout_height="@dimen/avatar_width_height"
                    android:clickable="false"
                    android:scaleType="fitCenter"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>

                <ImageButton
                    android:id="@+id/message_bubble_arrowhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/message_bubble_received_arrowhead"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/message_block_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/message_bubble_incoming"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/messageTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="6dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorLink="?android:attr/textColorPrimary" />

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </com.android.mms.ui.ReceivedMessageScrollView>

    <!-- 'Tap to reply' editor, character counter and send button -->
    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/material_16dp_keyline"
        android:paddingEnd="@dimen/material_16dp_keyline"
        android:paddingTop="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/embedded_text_editor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/compose_message_text_color"
            android:autoText="true"
            android:textSize="16sp"
            android:capitalize="sentences"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:nextFocusRight="@+id/send_button"
            android:hint="@string/compose_message_hint_text"
            android:textColorHint="#44000000"
            android:minHeight="@dimen/input_text_height"
            android:maxLines="3"
            android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
            android:imeOptions="actionSend|flagNoEnterAction"
            android:background="@drawable/compose_msg"
            android:backgroundTint="@color/outgoing_message_bg"/>

        <LinearLayout
            android:id="@+id/button_with_counter"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp">

            <TextView
                android:id="@+id/text_counter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorTertiary"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:paddingBottom="4dip"
                android:visibility="gone" />

            <com.android.mms.widget.LayeredImageButton
                android:id="@+id/send_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/generic_contact_picture"
                android:drawablePadding="0dip"
                android:contentDescription="@string/send"
                android:nextFocusLeft="@+id/embedded_text_editor" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
