<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_conversation"
    android:layout_width="match_parent"
    android:background="@drawable/list_item_background_material"
    android:layout_height="82dp"
    android:paddingStart="16dip"
    android:paddingEnd="16dip" >

    <ImageView
        android:id="@+id/avatar"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_width="@dimen/contact_photo_size"
        android:layout_height="@dimen/contact_photo_size" />

    <RelativeLayout
        android:id="@+id/info_root"
        android:layout_toStartOf="@+id/msg_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/avatar">

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:textStyle="normal|bold"
            android:singleLine="true"
            android:ellipsize="marquee" />

        <LinearLayout
            android:id="@+id/info_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/from"
            android:layout_alignBottom="@id/from"
            android:layout_toEndOf="@id/from">

            <TextView
                android:id="@+id/from_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@id/from"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                android:singleLine="true" />

            <TextView
                android:id="@+id/unread_count"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:background="#f1f6f7"
                android:textColor="#6F7171"
                android:layout_marginStart="3dip"
                android:visibility="gone"
                android:textSize="10sp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"  />

            <ImageView
                android:id="@+id/block"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="3dip"
                android:visibility="gone"
                android:src="@drawable/ic_blocked_small" />

            <ImageView android:id="@+id/attachment"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="3dip"
                android:visibility="gone"
                android:tint="#a8abab"
                android:src="@drawable/ic_attachment_universal_small" />

            <TextView android:id="@+id/date"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="3dip"
                android:gravity="bottom"
                android:textAppearance="@android:style/TextAppearance.Material.Caption"
                android:textSize="10sp"
                android:singleLine="true" />
        </LinearLayout>
        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@id/from"
            android:textAppearance="@android:style/TextAppearance.Material.Body1"
            android:textColor="?android:attr/textColorSecondary"
            android:maxLines="2"
            android:ellipsize="end" />

    </RelativeLayout>

    <ImageView
        android:layout_marginStart="16dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:padding="7dp"
        android:id="@+id/error"
        android:background="#16ff0606"
        android:src="@drawable/ic_error"
        android:scaleType="fitXY"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
</RelativeLayout>
