<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#1e000000"/>
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="0dp"
        android:right="1dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#3c000000"/>
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="0dp"
        android:right="1dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#00b8d4"/>
        </shape>
    </item>

</layer-list>
